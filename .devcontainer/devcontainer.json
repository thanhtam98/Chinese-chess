{
    "name": "Chinese Chess Development",
    "image": "ubuntu:22.04",
    
    // Platform configuration for ARM support
    "platforms": ["linux/amd64", "linux/arm64"],
    
    // Features to add to the dev container
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    
    // Configure tool-specific properties
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cmake-tools",
                "twxs.cmake",
                "ms-vscode.makefile-tools",
                "ms-vscode.test-adapter-converter",
                "hbenl.vscode-test-explorer",
                "ms-vscode.hexeditor"
            ],
            "settings": {
                "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
                "C_Cpp.default.intelliSenseMode": "linux-gcc-arm64",
                "C_Cpp.default.compilerPath": "/usr/bin/gcc",
                "C_Cpp.default.cStandard": "c17",
                "C_Cpp.default.cppStandard": "c++14",
                "cmake.configureOnOpen": true,
                "cmake.buildDirectory": "${workspaceFolder}/build",
                "cmake.generator": "Unix Makefiles",
                "files.associations": {
                    "*.h": "cpp",
                    "*.hpp": "cpp",
                    "*.cpp": "cpp",
                    "*.cc": "cpp",
                    "*.cxx": "cpp"
                }
            }
        }
    },
    
    // Use 'forwardPorts' to make a list of ports inside the container available locally
    "forwardPorts": [],
    
    // Use 'postCreateCommand' to run commands after the container is created
    "postCreateCommand": "bash .devcontainer/setup.sh",
    
    // Configure tool-specific properties
    "remoteUser": "vscode",
    
    // Set environment variables
    "containerEnv": {
        "LC_ALL": "en_US.UTF-8",
        "LANG": "en_US.UTF-8"
    },
    
    // Mount the workspace
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/Chinese-chess,type=bind,consistency=cached",
    "workspaceFolder": "/workspaces/Chinese-chess",
    
    // Keep container running
    "shutdownAction": "none",
    
    // Override the default command
    "overrideCommand": false
}